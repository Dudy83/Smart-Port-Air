<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="Access-Control-Allow-Origin" content="*">
    <meta name="viewport" content="width=device-width, user-scalable=no">
    <meta name="description" content="Smart Port App, application sur la pollution de l'air">
    <meta name="author" content="AtmoSud">
    <meta property="og:title" content="Smart Port App, application sur la pollution de l'air">
    <title>SmartPort | Pollution de l'air</title>
    {% block stylesheets %}
    <!-- Font Awesome icons <i> -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">

    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet">

    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.11.0/css/mdb.min.css" rel="stylesheet">

    <link rel="icon" type="image/png" href="images/logo/favicon.png" />

    {{ encore_entry_link_tags('app') }}
    {% endblock %}

</head>

<body>

    <nav id="navbar" class="d-flex justify-content-start align-items-center">

        <img src="../../images/logo/logo-removebg-preview.png" title="navbar smartport logo" alt="navbar smartport logo" width="128px">

        <div id="list-container" class="d-flex justify-content-around align-items-center mx-auto float-right">

            <a class="navbar-links" href="{{ path('smart_port') }}"><i class="fas fa-home mr-2"></i>
                <p class="navbar-links-content" style="margin:0">Accueil</p>
            </a>

            <a class="navbar-links" href="{{ path('map') }}"><i class="fas fa-anchor mr-2"></i>
                <p class="navbar-links-content" style="margin:0">Carte</p>
            </a>

            <a class="btn dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="fas fa-user mr-2"></i>{% if app.user %} {{ app.user.getUsername }} {% else %} Profil {% endif %}
            </a>

            <div class="dropdown-menu" id="profil-dropdown-menu">
             {% if not app.user %}
                <a class="dropdown-item btn w-100 m-0" href="/connexion" style="color: #fff;background-color:#6BBA62"><i class="fas fa-sign-in-alt mr-2"></i>Connexion</a>
                <a class="dropdown-item btn btn-warning w-100 m-0 mt-3" href="/inscription"><i class="fas fa-user-edit mr-2"></i>Inscription</a>
             {% else %}
                <a class="w-100 btn btn-warning mb-2 dropdown-item" href="{{ path('profil') }}"><i class="fas fa-user mr-2"></i>Profil</a>
                <a class="dropdown-item btn btn-danger w-100 m-0 mt-3" href="{{ path('security_logout') }}"><i class="fas fa-sign-out-alt mr-2"></i> Déconnexion</a>
             {% endif %}
            </div>

            <svg id="nav-icon" class="ham hamRotate ham8" viewBox="0 0 100 100" width="40" onclick="this.classList.toggle('active')">
                <path class="line top" d="m 30,33 h 40 c 3.722839,0 7.5,3.126468 7.5,8.578427 0,5.451959 -2.727029,8.421573 -7.5,8.421573 h -20" />
                <path class="line middle" d="m 30,50 h 40" />
                <path class="line bottom" d="m 70,67 h -40 c 0,0 -7.5,-0.802118 -7.5,-8.365747 0,-7.563629 7.5,-8.634253 7.5,-8.634253 h 20" />
            </svg>


        </div>


    </nav>

    <aside id="nav-dropdown" class="not-loaded">

        <div class="d-flex flex-column justify-content-center align-items-center border-bottom">
            <img src="images/logo/logo_transparent.png" title="aside smartport logo" alt="aside smartport logo" width="256px">

        </div>

        <div>
            {% if not app.user %}
            <a tabindex="4" href="/connexion" class="btn w-100 m-0 mt-3" style="color: #fff;background-color:#6BBA62"><i
                    class="fas fa-sign-in-alt mr-2"></i>Connexion</a>
            <a tabindex="4" href="/inscription" class="btn btn-warning w-100 m-0 mt-3" style="color: #fff"><i
                    class="fas fa-user-edit mr-2"></i> Créer un compte</a>
            {% else %}
            <a tabindex="4" href="{{ path('security_logout') }}" class="btn btn-danger w-100 m-0 mt-3"
                style="color: #fff"><i class="fas fa-sign-out-alt mr-2"></i> Déconnexion</a>
            {% endif %}
        </div>

        <div id="dropdown-content"
            class="d-flex flex-column justify-content-start align-items-center border-bottom border-top mt-3 pb-3">
            <a class="btn w-100 m-0 mt-3" style="color: #fff;background-color:#6BBA62" href="{{ path('profil') }}"><i
                    class="fas fa-user mr-2"></i>{% if app.user %} {{ app.user.getUsername }} {% else %}Profil {% endif %}</a>
            <a class="btn w-100 m-0 mt-3" style="color: #fff;background-color:#6BBA62" href="{{ path('map') }}"><i
                    class="fas fa-anchor mr-2"></i> Carte</a>
        </div>
    </aside>

    {% for message in app.flashes('success') %}

        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="far fa-check-circle mr-2"></i> {{ message }}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>

    {% endfor %}

    {% for message in app.flashes('account_modified') %}

        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="far fa-check-circle mr-2"></i> {{ message }}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>

    {% endfor %}

    
    {% for message in app.flashes('modify_error') %}

        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle mr-2"></i> {{ message }}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>

    {% endfor %}

    {% for message in app.flashes('modify_success') %}

        <div class="alert alert-success alert-dismissible fade show" role="alert" style="position:static;margin-top:50px;">
            <i class="far fa-check-circle mr-2"></i> {{ message }}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close" style="top:50px">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>

    {% endfor %}
    
    {% for message in app.flashes('success_email_confirm_token') %}

        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="far fa-check-circle mr-2"></i> {{ message }}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>

    {% endfor %}


    {% for message in app.flashes('error_forgotten_password') %}

        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle mr-2"></i> {{ message }}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>

    {% endfor %}

    {% for message in app.flashes('error_email') %}

        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle mr-2"></i> {{ message }}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>

    {% endfor %}

    {% for message in app.flashes('mail_forgotten_password') %}

        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="far fa-check-circle mr-2"></i> {{ message }}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>

    {% endfor %}

    {% for message in app.flashes('error_captcha') %}

        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle mr-2"></i> {{ message }}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>

    {% endfor %}

    <main id="main">
        {% block body %}{% endblock %}
    </main>

    {% block javascripts %}

    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.4/umd/popper.min.js"></script>

    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.4.1/js/bootstrap.min.js"></script>

    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.11.0/js/mdb.min.js"></script>
    
    <script src="https://unpkg.com/leaflet@1.5.1/dist/leaflet.js" integrity="sha512-GffPMF3RvMeYyc1LWMHtK8EbPv0iNZ8/oTtHPx9/cc2ILxQ+u905qIwdpULaqDkyBKgOaB57QTMg7ztg8Jm2Og==" crossorigin=""></script>

    <script type="text/javascript" src="cdn/js/leaflet-velocity.js"></script>

    {{ encore_entry_script_tags('app') }}

    {% endblock %}
</body>

</html>