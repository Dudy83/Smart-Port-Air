{% extends 'base.html.twig' %}

{% block body %}

   <div class="form-container w-100 d-flex justify-content-center align-items-center" style="height:100vh;">

        <div class="form w-50" style="color:#fff;">
            <h1 style="text-align:center;">Inscription</h1>
    
            {{form_start(form)}}
            {{form_row(form.username, {'label': 'Nom d\'utilisateur', 'attr': {'placeholder': 'Entrez un nom d\'utilisateur'}})}}
            {{form_row(form.email, {'label': 'Email', 'attr': {'placeholder': 'Entrez un email'}})}}
            {{form_row(form.password, {'label': 'Mot de passe', 'attr': {'placeholder': 'Entrez un mot de passe'}})}}
            {{form_row(form.confirm_password, {'label': 'Confirmez le mot de passe', 'attr': {'placeholder': 'Confirmez le mot de passe'}})}}
            <button type="submit" class="btn btn-success rounded w-100 m-0">s'inscrire</button>
            {{form_end(form)}}
        

        </div>

   </div>


{% endblock %}