{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('forms') }}
{% endblock %}

{% block body %}

    <div id="form-login" class="form-container w-25 d-flex flex-column justify-content-center align-items-center" style="height:100%;">

        
        <form class="form w-100 d-flex flex-column justify-content-center align-items-center" style="color:#fff;" method="post" action="{{ path('security_login') }}">
            
            <div class="group w-100"> 
                <input tabindex="1" id="login-input-email" type="text" class="w-100" required name="_username">
                <span class="highlight"></span>
                <span class="bar"></span>
                <label for="login-input-email" class="required active"><i class="fas fa-envelope mr-2"></i> Email</label>
            </div>

            <div class="group w-100">
                <input tabindex="2" id="login-input-password" type="password" class="w-100" required name="_password">
                <span class="highlight"></span>
                <span class="bar"></span>
                <label for="login-input-password" class="required active"><i class="fas fa-unlock-alt mr-2"></i> Mot de passe</label>
            </div>

                <button tabindex="3" type="submit" class="btn btn-success w-100 m-0"><i class="fas fa-sign-in-alt mr-2"></i> Connexion</button>

                <a tabindex="4" href="{{ path('security_registration') }}" class="btn btn-warning w-100 m-0 mt-3" style="color: #fff"><i class="fas fa-user-edit mr-2"></i> Créer un compte</a>
        </form>

        <a class="mt-3" href="{{ path('security_forgotten_password') }}">Mot de passe oublié ? </a>
    </div>

    <div id="form-image" class="w-75  d-flex flex-column justify-content-center align-items-center">
        <img src="images/logo/logo_transparent.png" width="40%">
    </div>

    {% if error %}
        <div class="alert alert-danger alert-dismissible fade show w-100" role="alert">
            <i class="fas fa-exclamation-triangle mr-2"></i> {{ error.messageKey|trans(error.messageData, 'security') }}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {% endif %}

    {% block javascripts %}
        {{ parent() }}
        {{ encore_entry_script_tags('forms') }}
    {% endblock %}

{% endblock %}